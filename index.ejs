<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>FlexGrid 60</title>
  <meta name="description" content="">
  <meta name="keywords" content="grid, system">
  <meta name="author" content="Boggy Jang">
  <meta name="format-detection" content="telephone=no">
  <link rel="stylesheet" href="css/flexgrid60.css">
  <style>
    .site-header {
      margin-bottom: 50px;
      text-align: center;
    }

    .site-footer {
      margin-top: 50px;
      text-align: center;
    }

    .fx-row div[class*=fx-] {
      border: 1px solid #f00;
    }
  </style>
</head>
<body>
  <!--Header begin-->
  <header class="site-header">
    <h1>FlexGrid 60</h1>
  </header>
  <!--Header end-->
  
  <!--Main content begin-->
  <div class="main">
    <h2>60 grids</h2>
    <div class="fx-row">
      <% for(var i=1; i<61; i++) { %>
       <div class="fx-xs-1">1</div>
      <% } %>
      <% for(var i=1; i<60; i++) { %>
       <div class="fx-xs-<%= 60-i %>"><%= 60-i %></div>
       <div class="fx-xs-<%= i %>"><%= i %></div>
      <% } %>
      <div class="fx-xs-60">60</div>
    </div>

    <h2>Sixths</h2>
    <div class="fx-row">
      <div class="fx-xs-10">10</div>
      <div class="fx-xs-10">10</div>
      <div class="fx-xs-10">10</div>
      <div class="fx-xs-10">10</div>
      <div class="fx-xs-10">10</div>
      <div class="fx-xs-10">10</div>
    </div>

    <h2>Quintile</h2>
    <div class="fx-row">
      <div class="fx-xs-12">12</div>
      <div class="fx-xs-12">12</div>
      <div class="fx-xs-12">12</div>
      <div class="fx-xs-12">12</div>
      <div class="fx-xs-12">12</div>
    </div>

    <h2>Quarter</h2>
    <div class="fx-row">
      <div class="fx-xs-15">15</div>
      <div class="fx-xs-15">15</div>
      <div class="fx-xs-15">15</div>
      <div class="fx-xs-15">15</div>
    </div>

    <h2>Trisection</h2>
    <div class="fx-row">
      <div class="fx-xs-20">20</div>
      <div class="fx-xs-20">20</div>
      <div class="fx-xs-20">20</div>
    </div>

    <h2>Bisection</h2>
    <div class="fx-row">
      <div class="fx-xs-30">30</div>
      <div class="fx-xs-30">30</div>
    </div>

  </div>
  <!--Main content end-->
    
  <!--Footer begin-->
  <footer class="site-footer">
    <div class="copyright">Copyright Â© 2016 Boggy Jang. All rights reserved.</div>
  </footer>
  <!--Footer end-->
</body>
</html>